---
import { Image } from "astro:assets";
import PrimaryBtn from "@components/buttons/PrimaryBtn";
import img from "@img/home/request-a-quote.jpg";
---

<section class="relative overflow-hidden">
  <Image
    format="webp"
    src={img}
    alt="purple anodized aluminum"
    class="absolute h-full w-full object-cover"
  />
  <div
    class="px-[2.5%] 2xl:px-0 2xl:max-w-8xl text-center lg:text-left mx-auto py-32 relative z-10"
  >
    <div class="bg-white py-10 px-12 max-w-lg">
      <h2 class="font-bold font-headline text-4xl">
        Let's start a conversation
      </h2>
      <p class="mt-2">
        Start a conversation so we can help start your next project. We can
        assist and provide samples.
      </p>
      <PrimaryBtn to="/request-a-quote" className="mt-5"
        >Request A Quote</PrimaryBtn
      >
    </div>
  </div>
</section>
