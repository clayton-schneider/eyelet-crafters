---
import Layout from "src/layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import CallToAction from "src/sections/general/CallToAction.astro";
import PrimaryBtn from "@components/buttons/PrimaryBtn";

const contacts = [
  { name: "ci:location", text: `2223 Thomaston Ave \nWaterbury, CT 06704` },
  { name: "carbon:phone-filled", text: "203-757-7349" },
  { name: "ant-design:printer-filled", text: "203-756-6050" },
  { name: "ic:sharp-email", text: "info@seidelinc.com" },
];

const socialLinks = [
  { name: "ant-design:instagram-outlined", link: "/" },
  { name: "ant-design:twitter-outlined", link: "/" },
  { name: "ant-design:facebook-outlined", link: "/" },
];

const fields = [
  { fieldType: "text", id: "first", name: "First Name" },
  { fieldType: "text", id: "last", name: "Last Name" },
  { fieldType: "email", id: "email", name: "Email Address" },
  { fieldType: "tel", id: "phone", name: "Phone Number" },
  { fieldType: "textarea", id: "message", name: "Message" },
];
---

<Layout title="Contact Us | Seidel Group">
  <section class="px-[2.5%] my-10">
    <div
      class="max-w-8xl mx-auto flex flex-col lg:flex-row items-center gap-10 lg:items-start justify-between space-y-5 lg:space-y-0"
    >
      <div class="grow shrink-0 max-w-lg lg:mt-20 text-center lg:text-left">
        <h1 class="font-black text-6xl">Contact Us</h1>
        <p class="mt-4 text-lg">
          This is just placeholder test. Don't be alarmed, this is just here to
          fill up space since your finalized copy.
        </p>
      </div>
      <div>
        <Image
          src={import("@img/contact/hero.png")}
          alt="seidel aluminum anodizing"
        />
      </div>
    </div>
  </section>
  <section class="px-[2.5%] bg-white py-20">
    <div class="max-w-6xl mx-auto">
      <div class="text-center max-w-2xl mx-auto">
        <h2 class="font-bold text-4xl">Get in Touch with Us</h2>
        <p class="mt-3 text-lg">
          This is just placeholder text. Don't be alarmed, this is just here to
          fill up space since your finalized copy isn't ready yet.
        </p>
      </div>
      <div class="mt-10 mb-20">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2983.5776809109016!2d-73.06171678423536!3d41.60001817924522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e7bf8a1589123f%3A0xeffb20c3a20b85a0!2s2223%20Thomaston%20Ave%2C%20Waterbury%2C%20CT%2006704!5e0!3m2!1sen!2sus!4v1668135604354!5m2!1sen!2sus"
          class="w-full h-[550px]"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div
        class="flex flex-col items-center md:flex-row md:items-start md:space-x-20"
      >
        <div class="w-full lg:max-w-[250px] text-center md:text-left">
          <h2 class="font-bold text-4xl">Contact Us</h2>
          <p class="mt-2 text-lg">
            Sometimes it's nice to put in text just to get an idea of how text
            will fill in a space on your website.
          </p>
          <div class="mt-3 flex flex-col items-center md:items-start">
            <ul class="space-y-3 mt-2">
              {
                contacts.map((contact) => (
                  <div class="flex items-start space-x-2 max-w-xs">
                    <Icon name={contact.name} size={30} class="text-primary" />
                    <p class="whitespace-pre-line">{contact.text}</p>
                  </div>
                ))
              }
            </ul>
            <div class="hidden lg:flex space-x-2 mt-3">
              {
                socialLinks.map((link) => (
                  <a href={link.link}>
                    <Icon name={link.name} size={30} class="text-primary" />
                  </a>
                ))
              }
            </div>
          </div>
        </div>
        <form
          class="mt-10 grow w-full my-5 grid grid-cols-1 lg:grid-cols-2 gap-4"
        >
          {
            fields.map((field) => (
              <div
                class={
                  (field.fieldType === "textarea"
                    ? "col-span-2"
                    : "col-span-2 lg:col-span-1") + " relative"
                }
              >
                <label for={field.id} class="invisible absolute">
                  {field.name}
                </label>
                {field.fieldType === "textarea" ? (
                  <textarea
                    id={field.name}
                    class="w-full bg-transparent focus:outline-none resize-none border-b-gray-800 border-b p-2 h-[150px]"
                    placeholder={field.name}
                  />
                ) : (
                  <input
                    type={
                      field.fieldType as astroHTML.JSX.HTMLInputTypeAttribute
                    }
                    name={field.name}
                    id={field.id}
                    class="w-full bg-transparent focus:outline-none border-b-gray-800 border-b p-2"
                    placeholder={field.name}
                  />
                )}
              </div>
            ))
          }

          <PrimaryBtn type="submit" className="justify-self-start"
            >Submit</PrimaryBtn
          >
        </form>
      </div>
    </div>
  </section>
  <CallToAction />
</Layout>
