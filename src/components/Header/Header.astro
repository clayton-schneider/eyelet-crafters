---
import logo from "../../img/seidel-group-logo.svg";
// Import components
import NavMenu from "./NavMenu";
const links = [
  { linkText: "About Us", link: "/about" },
  {
    linkText: "Sustainability",
    link: "/sustainability",
  },
  { linkText: "Capabilities", link: "/capabilities" },
  {
    linkText: "Industries",
    link: "/industries",
    sublinks: [
      { linkText: "Cosmetic", link: "/industries/cosmetic-packaging" },
      { linkText: "Automotive", link: "/industries/automotive" },
      { linkText: "Pharmaceutical", link: "/industries/pharmaceutical" },
    ],
  },
  { linkText: "Contact Us", link: "/contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header
  class={(className ? className : "") + " py-10 px-[2.5%] 2xl:px-0 relative"}
>
  <div
    class="bg-white max-w-8xl mx-auto py-4 px-10 rounded-md shadow-sm flex items-center justify-between"
  >
    <a href="/">
      <img src={logo} alt="Logo" />
    </a>

    <NavMenu links={links} client:load />
  </div>
</header>
